<h1>Posts</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Posta</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <span class="post-title"><%= post.title %></span>
          <span class="post-body"><%= strip_tags(post.body).truncate(150) %></span>
        <td>
          <div class="btn-group">
            <%= link_to 'Exibir', post, class: 'btn btn-light btn-sm' %>
            <%= link_to 'Editar', edit_post_path(post), class: 'btn btn-light btn-sm' %>
            <%= link_to 'Excluir', post, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-sm' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Post', new_post_path, class: 'btn btn-primary' %>
