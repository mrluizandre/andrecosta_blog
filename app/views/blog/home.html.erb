<div class="row">
  <div class="col">

    <div class="posts-home">
      <div class="row">
        <div class="col-8 posts-col">
          <% @posts.each do |post| %>
            <div class="post">
              <%= link_to blog_post_view_path(post) do %>
                <div class="row post-info">
                  <div class="col-auto">
                    <img src="https://placehold.it/55x55" alt="" class="img-fluid user-post-image">
                  </div>
                  <div class="col">
                    <span class="align-middle" style="display: inline;">
                      <div class="author">Andre Costa</div>
                      <span class="date"><%= post.created_at.strftime("%d %b %y") %> Â· <%= minutes_of_read post.body %> </span>
                    </span>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <%= image_tag post.image, class: 'img-fluid post-image' %>
                  </div>
                </div>
                <div class="row">
                  <div class="col post-title">
                    <%= post.title %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="col-4">
          <%= render 'shared/sidebar-home' %>
        </div>
      </div>
    </div>

  </div>
</div>
